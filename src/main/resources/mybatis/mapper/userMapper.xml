<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.havenwithyou.mongnewmong.mapper.UserMapper">

  <resultMap id="userMap" type="UserDto">
    <id  property="userid"	 column="USER_ID" />
    <id  property="name"	 column="NAME" />
    <id  property="email"	 column="EMAIL" />
    <id  property="phoneNo"   column="PHONE_NUM"/>
    <id  property="username"	 column="USER_NAME" />
    <id  property="pw"	 column="PW" />
    <id  property="userType"	 column="USER_TYPE" />
    <id  property="pwModifyDt"	 column="PW_MODIFY_DT" />
    <id  property="signupDt"	 column="SIGNUP_DT" />
    <id  property="centerid"     column="CENTER_ID"/>
    <id property="avatar" column="AVATAR"/>
  </resultMap>


  <select id="checkEmail"
          parameterType="String"
          resultType="int">
    SELECT USER_ID FROM USER_T
    <where>
      EMAIL = #{email}
    </where>
  </select>

  <select id="getUserByMap"
          parameterType="Map"
          resultType="UserDto">
    SELECT USER_ID, NAME, EMAIL, PHONE_NUM, USER_NAME, USER_TYPE, PW_MODIFY_DT, SIGNUP_DT
      FROM USER_T
    <where>
      <if test="email!=null">EMAIL = #{email}</if>
      <if test="pw!=null">AND PW = #{pw}</if>
    </where>
  </select>

  <select id="getDupUserName"
          parameterType="Map"
          resultType="UserDto">
    SELECT USER_ID
    FROM USER_T
    <where>
      <if test="username!=null">USER_NAME = #{username}</if>
    </where>
  </select>

  <select id="getLeaveUserByMap"
          parameterType="Map"
          resultType="LeaveUserDto">
    SELECT LEAVE_USER_ID
    FROM LEAVE_USER_T
    <where>
      <if test="email!=null">EMAIL = #{email}</if>
    </where>
  </select>

  <insert id="insertUser"
          parameterType="UserDto">
    INSERT INTO USER_T (
        USER_ID
      , NAME
      , EMAIL
      , PHONE_NUM
      , USER_NAME
      , PW
      , USER_TYPE
      , SIGNUP_DT
    ) VALUES (
        USER_SEQ.NEXTVAL
      , #{name}
      , #{email}
      , #{phoneNo}
      , #{username}
      , #{pw}
      , #{userType}
      , CURRENT_DATE
    )
  </insert>

  <delete id="deleteUser">
    DELETE
      FROM USER_T
     WHERE USER_ID = #{userid}
  </delete>

  <insert id="insertAccessHistory"
          parameterType="Map">
    INSERT INTO ACCESS_HISTORY_T (
        ACCESS_HISTORY_ID
      , EMAIL
      , IP
      , USER_AGENT
      , SESSION_ID
      , SIGNIN_DT
      , SIGNOUT_DT
    ) VALUES (
        ACCESS_HISTORY_SEQ.NEXTVAL
      , #{email}
      , #{ip}
      , #{userAgent}
      , #{sessionId}
      , CURRENT_DATE
      , NULL
    )
  </insert>
  
  <update id="updateAccessHistory">
    UPDATE ACCESS_HISTORY_T
       SET SIGNOUT_DT = CURRENT_DATE
     WHERE SESSION_ID = #{sessionId} 
  </update>

</mapper>